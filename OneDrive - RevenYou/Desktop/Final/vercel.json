{
  "builds": [
    {
      "src": "server.py",
      "use": "@vercel/python"
    },
    {
      "src": "public/store.html",
      "use": "@vercel/static-build"
    },
    {
      "src": "public/**/*.css",
      "use": "@vercel/static-build"
    },
    {
      "src": "public/**/*.js",
      "use": "@vercel/static-build"
    }
  ],
  "routes": [
    {
      "src": "/create-payment-intent",
      "dest": "server.py",
      "methods": ["POST"]
    },
    {
      "src": "/",
      "dest": "/public/store.html" 
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1" 
    }
  ]
}
