{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.py",
      "use": "@vercel/python"
    },
    {
      "src": "public/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/create-payment-intent",
      "dest": "/api/server.py",
      "methods": ["POST"]
    },
    {
      "src": "/",
      "dest": "/public/store.html"
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1"
    }
  ]
}
