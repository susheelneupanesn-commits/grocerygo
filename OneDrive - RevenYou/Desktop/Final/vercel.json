{
  "builds": [
    {
      "src": "server.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/create-payment-intent",
      "dest": "server.py",
      "methods": ["POST"]
    },
    {
      "src": "/(.*)",
      "dest": "/$1" // <--- REMOVED "public"
    },
    {
      "src": "/",
      "dest": "/index.html" // <--- ADDED explicit root route
    }
  ]
}