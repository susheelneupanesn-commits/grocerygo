{
  "builds": [
    {
      "src": "server.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    // 1. Explicitly route the root (homepage) to your main product page
    {
      "src": "/",
      "dest": "/store.html"
    },
    // 2. Explicitly route all static files (CSS, JS, images, and other HTML pages)
    {
      "src": "/(.*\\.(html|css|js|png|jpg|gif|svg))",
      "dest": "/$1" 
    },
    // 3. Route for the API endpoint
    {
      "src": "/create-payment-intent",
      "dest": "server.py",
      "methods": ["POST"]
    }
  ]
}
